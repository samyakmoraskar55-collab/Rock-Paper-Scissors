      <script>
          // Game state
          let gameState = {
              playerScore: 0,
              computerScore: 0,
              drawScore: 0,
              balance: 1000,
              currentBet: 100,
              gameOver: false
          };
  
          // DOM Elements
          const firstScreen = document.getElementById('firstScreen');
          const secondScreen = document.getElementById('secondScreen');
          const startButton = document.getElementById('startButton');
          const playerScoreEl = document.getElementById('playerScore');
          const computerScoreEl = document.getElementById('computerScore');
          const drawScoreEl = document.getElementById('drawScore');
          const balanceEl = document.getElementById('balance');
          const playerSelection = document.getElementById('playerSelection');
          const computerSelection = document.getElementById('computerSelection');
          const choiceButtons = document.querySelectorAll('.choice-btn');
          const resultEl = document.getElementById('result');
          const gameOverPopup = document.getElementById('gameOverPopup');
          const playAgainButton = document.getElementById('playAgainButton');
          const finalResult = document.getElementById('finalResult');
          const decreaseBetBtn = document.getElementById('decreaseBet');
          const increaseBetBtn = document.getElementById('increaseBet');
          const currentBetEl = document.getElementById('currentBet');
  
          // Game choices with emojis
          const choices = {
              rock: '🪨',
              paper: '📄',
              scissors: '✂️'
          };
  
          // Initialize game
          function initGame() {
              updateScore();
              updateBalance();
              resultEl.textContent = "Choose Rock, Paper, or Scissors!";
              resultEl.style.color = "#333";
          }
  
          // Update score display
          function updateScore() {
              playerScoreEl.textContent = gameState.playerScore;
              computerScoreEl.textContent = gameState.computerScore;
              drawScoreEl.textContent = gameState.drawScore;
          }
  
          // Update balance display
          function updateBalance() {
              balanceEl.textContent = gameState.balance;
              currentBetEl.textContent = gameState.currentBet;
          }
  
          // Computer choice
          function getComputerChoice() {
              const choices = ['rock', 'paper', 'scissors'];
              const randomIndex = Math.floor(Math.random() * 3);
              return choices[randomIndex];
          }
  
          // Determine winner
          function determineWinner(playerChoice, computerChoice) {
              if (playerChoice === computerChoice) {
                  return 'draw';
              }
              
              if (
                  (playerChoice === 'rock' && computerChoice === 'scissors') ||
                  (playerChoice === 'paper' && computerChoice === 'rock') ||
                  (playerChoice === 'scissors' && computerChoice === 'paper')
              ) {
                  return 'player';
              }
              
              return 'computer';
          }
  
          // Play round
          function playRound(playerChoice) {
              if (gameState.gameOver || gameState.balance < gameState.currentBet) return;
              
              const computerChoice = getComputerChoice();
              
              // Display choices with emojis
              playerSelection.textContent = choices[playerChoice];
              computerSelection.textContent = choices[computerChoice];
              
              // Add animation
              playerSelection.style.transform = 'scale(0)';
              computerSelection.style.transform = 'scale(0)';
              
              setTimeout(() => {
                  playerSelection.style.transform = 'scale(1)';
                  computerSelection.style.transform = 'scale(1)';
              }, 100);
              
              // Determine winner
              const winner = determineWinner(playerChoice, computerChoice);
              
              // Update scores and balance
              if (winner === 'player') {
                  gameState.playerScore++;
                  gameState.balance += gameState.currentBet;
                  resultEl.textContent = `🎉 You Win! +${gameState.currentBet} coins`;
                  resultEl.style.color = "#4CAF50";
              } else if (winner === 'computer') {
                  gameState.computerScore++;
                  gameState.balance -= gameState.currentBet;
                  resultEl.textContent = `💻 Computer Wins! -${gameState.currentBet} coins`;
                  resultEl.style.color = "#f44336";
              } else {
                  gameState.drawScore++;
                  resultEl.textContent = "🤝 It's a Draw!";
                  resultEl.style.color = "#FFC107";
              }
              
              updateScore();
              updateBalance();
              
              // Check for game over (first to 5 points or no balance)
              if (gameState.playerScore >= 5 || gameState.computerScore >= 5 || gameState.balance <= 0) {
                  setTimeout(endGame, 1000);
              }
          }
  
          // End game
          function endGame() {
              gameState.gameOver = true;
              
              if (gameState.playerScore > gameState.computerScore) {
                  finalResult.innerHTML = `
                      <div style="color: #4CAF50; font-size: 2.5rem; margin-bottom: 20px;">🏆 You Won!</div>
                      <div>Final Score: ${gameState.playerScore} - ${gameState.computerScore}</div>
                      <div>Final Balance: ${gameState.balance} coins</div>
                      <div style="margin-top: 15px;">You defeated the computer! 🎉</div>
                  `;
              } else if (gameState.computerScore > gameState.playerScore) {
                  finalResult.innerHTML = `
                      <div style="color: #f44336; font-size: 2.5rem; margin-bottom: 20px;">😞 Computer Won!</div>
                      <div>Final Score: ${gameState.computerScore} - ${gameState.playerScore}</div>
                      <div>Final Balance: ${gameState.balance} coins</div>
                      <div style="margin-top: 15px;">Better luck next time! 💪</div>
                  `;
              } else {
                  finalResult.innerHTML = `
                      <div style="color: #FFC107; font-size: 2.5rem; margin-bottom: 20px;">🤝 It's a Tie!</div>
                      <div>Final Score: ${gameState.playerScore} - ${gameState.computerScore}</div>
                      <div>Final Balance: ${gameState.balance} coins</div>
                      <div style="margin-top: 15px;">Great game! 🎮</div>
                  `;
              }
              
              gameOverPopup.style.display = 'flex';
          }
  
          // Reset game
          function resetGame() {
              gameState = {
                  playerScore: 0,
                  computerScore: 0,
                  drawScore: 0,
                  balance: 1000,
                  currentBet: 100,
                  gameOver: false
              };
              
              playerSelection.textContent = '';
              computerSelection.textContent = '';
              resultEl.textContent = "Choose Rock, Paper, or Scissors!";
              resultEl.style.color = "#333";
              
              updateScore();
              updateBalance();
              gameOverPopup.style.display = 'none';
          }
  
          // Bet controls
          function updateBet(amount) {
              if (gameState.gameOver) return;
              
              const newBet = gameState.currentBet + amount;
              if (newBet >= 100 && newBet <= gameState.balance) {
                  gameState.currentBet = newBet;
                  updateBalance();
              }
          }
  
          // Event Listeners
          startButton.addEventListener('click', () => {
              firstScreen.style.display = 'none';
              secondScreen.style.display = 'block';
              initGame();
          });
  
          choiceButtons.forEach(button => {
              button.addEventListener('click', () => {
                  const choice = button.getAttribute('data-choice');
                  playRound(choice);
              });
          });
  
          playAgainButton.addEventListener('click', () => {
              resetGame();
          });
  
          decreaseBetBtn.addEventListener('click', () => {
              updateBet(-100);
          });
  
          increaseBetBtn.addEventListener('click', () => {
              updateBet(100);
          });
  
          // Initialize the game when page loads
          document.addEventListener('DOMContentLoaded', () => {
              // Game is initialized when start button is clicked
          });
      </script>
  </body>
  </html>
  ]]>
  </aiFile>
  </aiGame>
